{{>menu}}

<section class="information-product">
	<section class="product-imgs" data-imgs="{{resRows.picture}}">
		<section class="product-imgs__left">
		</section>
		<figure class="product-imgs__right">
			<img src="" alt="Imagen del producto">
		</figure>
	</section>

	<section class="product-abstract">
		<div class="product-abstract__name-container">
			<h1 class="product-abstract__name">{{resRows.name}}</h1>
		</div>
		<p class="product-abstract__price">$ {{resRows.priceFormatted}}</p>
		<p class="product-abstract__shipping">
			<i class="bi bi-truck product-abstract__shipping-icon"></i>
			Env&iacuteo gratis
		</p>
		<p class="product-abstract__stock"><b>Stock disponible: </b>{{resRows.stock}}</p>

		<form id="add-cart-product-form">
			<input type="hidden" name="user" value="{{idUser.id}}">
			<input type="hidden" name="reference" value="{{resRows.reference}}">
			<input type="hidden" name="product" value="{{resRows.id}}">
			<input type="hidden" name="name" value="{{resRows.name}}">
			<input type="hidden" name="picture" value="insertar">
			<input type="hidden" name="price" value="{{resRows.priceFormatted}}">
			<p class="product-abstract__amount">
				<b>Cantidad: </b>
				<select name="amount" id="amount" class="product-abstract__select">
					<option value="1">1</option>
					<option value="2">2</option>
					<option value="3">3</option>
				</select>
			</p>
			{{#if colors}}
			<p class="product-abstract__colour">
				<b>Color:
					<select name="color" id="color" class="product-abstract__select">
						{{#each colors}}
						<option value="{{color}}">{{color}}</option>
						{{/each}}
					</select>
				</b>
			</p>
			{{/if}}
			<p class="product-abstract__supplier">
				<b>Distribuidor: </b>{{resRows.company_name}}
			</p>
			<input type="submit" value="Agregar al carrito" class="product-abstract__btn-cart" />
		</form>
	</section>

	<section class="product-specs" data-text="{{resRows.specs}}">
		<p class="product-specs__title">Especificaciones</p>
		<p class="product-specs__text">

		</p>
	</section>

	<section class="product-payment">
		<p class="product-payment__title">Medios de pago</p>
		<figure class="product-payment__img-container">
			<img src="/assets/img/method-payments.png" alt="Imagen de los medios de pago" />
		</figure>
		<p class="product-payment__title">Garant&iacutea</p>
		<p class="product-payment__text">
			12 meses a partir de la fecha de venta y entrega del equipo al
			cliente.
		</p>
		<p class="product-payment__title">Referencia del producto</p>
		<p class="product-payment__text">
			{{resRows.reference}}
		</p>
	</section>

	<section class="product-description" data-text="{{resRows.information}}">
		<p class="product-description__title">Descripci&oacuten</p>
		<p class="product-description__text">

		</p>
	</section>
</section>
